<p id="notice"><%= notice %></p>

<h1>Listing Patient Attachments</h1>

<table  >
  <thead>
    <tr>
      <th>Patient</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_attachments.each do |patient_attachment| %>
      <tr>
        <td><%= patient_attachment.patient_id %></td>
        <td><%= patient_attachment.avatar %></td>
        <td><%= link_to 'Show', patient_attachment %></td>
        <td><%= link_to 'Edit', edit_patient_attachment_path(patient_attachment) %></td>
        <td><%= link_to 'Destroy', patient_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient attachment', new_patient_attachment_path %>
